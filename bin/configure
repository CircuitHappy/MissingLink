#!/bin/bash
if [[ "$OSTYPE" == "darwin"* ]]; then
  echo "ERROR: This command must be run from the linux VM"
  exit 1
fi

MISSINGLINK_PATH=`pwd`
BUILDROOT_PATH="${BUILDROOT_PATH:-${MISSINGLINK_PATH}/..}"

cd "${BUILDROOT_PATH}/CHIP-buildroot"
make missinglink_defconfig
make

cd "${MISSINGLINK_PATH}"
rm -r build/*
cd build
cmake -D_BUILDROOT_DIR="${BUILDROOT_PATH}/.." ..
