#!/bin/bash
if [[ "$OSTYPE" == "darwin"* ]]; then
  echo "ERROR: This command must be run from the linux VM"
  exit 1
fi

MISSINGLINK_PATH=`pwd`
BUILDROOT_PATH="${BUILDROOT_PATH:-../CHIP-buildroot}"

cd "$BUILDROOT_PATH"
make missinglink_defconfig
make

cd "$MISSINGLINK_PATH"
rm -r build/*
cd build
cmake ..
