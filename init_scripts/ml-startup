# cat S95ml-startup
#!/bin/sh

ulimit -c unlimited


case "$1" in
  start)
    # make sure we are on the external antenna
    /usr/bin/set_antenna ufl
    nohup /usr/bin/missing_link_display > /var/log/missing_link_display.log 2>&1 &
    nohup /usr/bin/missing_link > /var/log/missing_link.log 2>&1 &
    ;;
  stop)
    killall missing_link
    killall missing_link_display
    ;;
  *)
    echo "usage: $0 <start|stop>"
    exit 1
    ;;
esac

exit 0
#
